<!-- Blog Categories Well -->
  <div class="well">
    <h3><span class="glyphicon glyphicon-tags"></span> Top 30 Tags</h3>
    <hr>
    <div class="row">
      <div class="col-lg-12">
        <% tag_cloud(@tags, %w(css1 css2 css3 css4)) do |tag, css_class| %>
            <%= link_to "##{tag.name}", { :controller => "manuals", :action => "index", tag: tag.name }, :class => css_class %>
        <% end %>
      </div>
      <!-- /.col-lg-6 -->
    </div>
    <!-- /.row -->
  </div>
