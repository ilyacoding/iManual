<%= form_for @manual, :html => { :class => "form-horizontal manual" } do |f| %>

  <% if @manual.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@manual.errors.count, "error") %></h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @manual.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>

  <div class="form-group">
    <%= f.hidden_field :category_id, :value => @category_id %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit t("helpers.links.create"), :class => 'btn btn-primary' %>
      <%= link_to t("helpers.links.cancel"),
                manuals_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
