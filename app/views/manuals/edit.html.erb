<style>
  body {
    min-width: 520px;
  }

  .column {
    width: 170px;
    float: left;
    padding-bottom: 100px;
  }

  .portlet {
    margin: 0 1em 1em 0;
    padding: 0.3em;
    width: 100%;
  }

  .portlet-header {
    padding: 0.2em 0.3em;
    margin-bottom: 0.5em;
    position: relative;
  }

  .portlet-toggle {
    position: absolute;
    top: 50%;
    right: 0;
    margin-top: -8px;
  }

  .portlet-content {
    padding: 0.4em;
  }

  .portlet-placeholder {
    border: 1px dotted black;
    margin: 0 1em 1em 0;
    height: 50px;
  }

  .sortable {
    list-style-type: none;
    margin: 0;
    padding: 0;
    width: 100%;
  }

  .sortable li {
    margin: 0 3px 3px 3px;
    padding: 0.4em;
    padding-left: 1.5em;
    font-size: 1.4em;
    height: 50px;
    width: 99%;
  }

  .sortable li span {
    position: absolute;
    margin-left: -1.3em;
  }

  .fa-close {
    cursor: pointer;
  }
</style>

