<div class="panel panel-default col-md-12" style="padding: 10px;">
  <h2>
    <%= link_to manual.name, manual_path(manual), :class => 'col-xs' %>
    <small class="pull-right">
      <%= render 'manuals/edit_buttons', manual: manual%>
    </small>
  </h2>

  <%= render 'manuals/metadata', manual: manual %>

  <div class="panel-body">
    <%= link_to image_tag(manual.preview, :class => "img-responsive center-block"), manual_path(manual) %>
  </div>

  <hr>

  <div class="pull-left"><%= t('activerecord.models.comment.many') %>: <span class="badge"><%= manual.comments_count %></span></div>
  <div class="pull-right"><%= link_to t('activerecord.controllers.manual.index.read'), manual_path(manual), class: "btn btn-primary" %></div>
  <div class="clearfix"></div>
</div>
