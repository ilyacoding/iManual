<div class="panel panel-default" style="padding: 10px;">
  <h2>
    <%= link_to manual.name, manual_path(manual), :class => 'col-xs' %>
    <small class="pull-right">
      <%= render 'manuals/edit_buttons', manual: manual%>
    </small>
  </h2>

  <small class="pull-right"><span class="glyphicon glyphicon-pencil"></span> Updated <%= local_time_ago(manual.updated_at) %></small>
  <hr>

  <p><span class="glyphicon glyphicon-time"></span> Posted on <%= local_time(manual.created_at) %></p>
  <p><span class="glyphicon glyphicon-user"></span> Author: <%= link_to manual.user.get_name, user_path(manual.user) %></p>
  <p><span class="glyphicon glyphicon-check"></span> Category: <%= link_to manual.category.name, category_path(manual.category) %></p>

  <div class="panel-body">
    <%= link_to image_tag(manual.preview, :class => "img-responsive center-block"), manual_path(manual) %>
  </div>

  <hr>

  <div class="pull-left">Comments: <span class="badge"><%= manual.comments_count %></span></div>
  <div class="pull-right"><%= link_to "Read", manual_path(manual), class: "btn btn-primary" %></div>
  <div class="clearfix"></div>
</div>