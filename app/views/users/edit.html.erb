<div class="row">
  <div class="col-md-6 col-md-offset-3 col-sm-12">
    <h2 align="center">Updating <%=@user.name%></h2>
    <%= form_for(@user) do |f| %>
        <div class="form-group">
          <div class="form-group">
            <label>Name</label>
            <%= f.text_field :name %>
          </div>
          <div class="form-group">
            <label>About</label>
            <%= f.text_area :about, size: "60x12" %>
          </div>
          <div class="form-group">
            <label>Interests</label>
            <%= f.text_area :interests, size: "60x12" %>
          </div>
          <%= f.submit "Update" %>
        </div>
    <% end %>
  </div>
</div>
