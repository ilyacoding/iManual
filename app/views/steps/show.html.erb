<% content_for(:title) do %>
  <%= t('main.title.step', manual_title: @step.manual.name, step_id: @step.priority, step_title: @step.name) %>
<% end %>

<div class="col-md-12">
  <h3><%= link_to t('activerecord.controllers.step.edit.back'), manual_path(@step.manual), :class => 'col-xs' %></h3>
  <hr>
  <h2><%= t('activerecord.controllers.step.show.name', priority: @step.priority, name: @step.name) %></h2>
  <hr>
  <%= render partial: "blocks/block", collection: ordered_blocks(@step), as: :block %>
  <hr>
  <%= render 'steps/navigation', next_step: next_step, previous_step: previous_step %>
</div>
