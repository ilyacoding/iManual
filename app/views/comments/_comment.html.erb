<div class="media embed-responsive-16by9">
  <%= link_to image_tag(comment.user.gravatar_url, size: 64), user_path(comment.user), class: "pull-left" %>
  <div class="media-body">
    <h4 class="media-heading"><%= link_to comment.user.get_name, user_path(comment.user) %>
      <small><%= l(comment.created_at) %></small>
      <small class="pull-right">
        <%= render 'comments/edit_buttons', manual: comment.manual, comment: comment if current_user.present? %>
      </small>
    </h4>
    <%= comment.content %>
  </div>
</div>
